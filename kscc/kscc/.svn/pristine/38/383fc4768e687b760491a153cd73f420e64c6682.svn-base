    private void threadRestart(Map<String,String> param) {
        try{
            Thread.sleep(5000);
            ExecutorService service = ThreadPoolUtils.getThreadPool();
            param.put("authenticationid", this.getAuthenticationId(param));
            XmlGenerator.generateRequestRoot(param);
            this.Login(param);
            this.SetSysTimeInfo(param);
            service.execute(new AuthenticThread(param,this));
        }catch (Exception e) {
            e.printStackTrace();
            logger.error("重启线程出错");
            System.out.println("重启线程出错....");
            if (flag) {
                threadRestart(param);
            }
        }
    }

