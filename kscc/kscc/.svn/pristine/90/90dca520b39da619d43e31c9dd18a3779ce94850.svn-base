        System.out.println(xmlResponse);
        String srcPath=null;
        try {
            Document document = DocumentHelper.parseText(xmlResponse);
            srcPath= document.getRootElement().element("MP4List").element("MP4Info").elementText("TitlePath");
        } catch (DocumentException e) {
